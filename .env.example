# FastAPI Heroes - Environment Configuration Template
# Copy this file to .env and update with your values
# WARNING: Never commit .env file to version control!

# Database
# For development: SQLite (uses database.db)
# DATABASE_URL=sqlite:///database.db

# For production: PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/heroesdb

# Application
DEBUG=false
LOG_LEVEL=info

# CORS (Cross-Origin Resource Sharing)
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Optional: Add more variables as needed for your setup
